            <text x="26" y="42" font-size="22">Samsung/LG (sin app VPN): rutas de solución</text>

            <rect x="26" y="70" width="300" height="140" rx="14" fill="#fefce8" class="stroke"/>
            <text x="46" y="104" font-size="18">Opción A: Router con VPN</text>
            <text x="46" y="130" font-size="14">Cifra todo el tráfico</text>
            <text x="46" y="154" font-size="14">Ideal para privacidad</text>

            <rect x="350" y="70" width="300" height="140" rx="14" fill="#f4fff6" class="stroke"/>
