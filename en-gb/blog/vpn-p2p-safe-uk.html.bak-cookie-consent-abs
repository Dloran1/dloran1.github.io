  <!-- Interactivity JS: checklist persisted in localStorage -->
  <script>
    (function(){
      function qs(id){ return document.getElementById(id); }

      function updateBadge(){
        var ids = ['p2p_ck_ks','p2p_ck_bind','p2p_ck_dns','p2p_ck_ipv6','p2p_ck_obfs','p2p_ck_pf'];
        var done = 0;
        ids.forEach(function(k){
          var el = qs(k);
          if (el && el.checked) done++;
        });
        var badge = qs('p2p_check_badge');
        if (badge) badge.textContent = done + '/' + ids.length + ' done';
      }

      function saveState(){
        try{
          var state = {
            ks: !!qs('p2p_ck_ks')?.checked,
            bind: !!qs('p2p_ck_bind')?.checked,
            dns: !!qs('p2p_ck_dns')?.checked,
            ipv6: !!qs('p2p_ck_ipv6')?.checked,
            obfs: !!qs('p2p_ck_obfs')?.checked,
            pf: !!qs('p2p_ck_pf')?.checked
          };
          localStorage.setItem('vpnworld_p2p_check_uk', JSON.stringify(state));
        }catch(e){}
      }

      function loadState(){
        try{
          var raw = localStorage.getItem('vpnworld_p2p_check_uk');
          if (!raw) return;
          var s = JSON.parse(raw);
          if (qs('p2p_ck_ks')) qs('p2p_ck_ks').checked = !!s.ks;
          if (qs('p2p_ck_bind')) qs('p2p_ck_bind').checked = !!s.bind;
          if (qs('p2p_ck_dns')) qs('p2p_ck_dns').checked = !!s.dns;
          if (qs('p2p_ck_ipv6')) qs('p2p_ck_ipv6').checked = !!s.ipv6;
          if (qs('p2p_ck_obfs')) qs('p2p_ck_obfs').checked = !!s.obfs;
          if (qs('p2p_ck_pf')) qs('p2p_ck_pf').checked = !!s.pf;
        }catch(e){}
      }

      function resetAll(){
        ['p2p_ck_ks','p2p_ck_bind','p2p_ck_dns','p2p_ck_ipv6','p2p_ck_obfs','p2p_ck_pf'].forEach(function(k){
          var el = qs(k);
          if (el) el.checked = false;
        });
        try{ localStorage.removeItem('vpnworld_p2p_check_uk'); }catch(e){}
        updateBadge();
      }

      document.addEventListener('DOMContentLoaded', function(){
        loadState();
        updateBadge();

        var wrap = qs('p2p_check_wrap');
        if (wrap){
          wrap.addEventListener('click', function(e){
            var t = e.target;
            if (t && t.tagName === 'A') return;

            var item = t.closest ? t.closest('.check-item') : null;
            if (!item) return;

            var cb = item.querySelector('input[type="checkbox"]');
            if (!cb) return;
            cb.checked = !cb.checked;
            saveState();
            updateBadge();
          });

          wrap.querySelectorAll('input[type="checkbox"]').forEach(function(cb){
            cb.addEventListener('change', function(){
              saveState();
              updateBadge();
            });
          });
        }

        var resetBtn = qs('p2p_check_reset');
        if (resetBtn){
          resetBtn.addEventListener('click', function(){
            resetAll();
          });
        }
      });
    })();
  </script>

