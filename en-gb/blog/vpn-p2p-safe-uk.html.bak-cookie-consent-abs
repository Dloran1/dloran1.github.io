                <text x="640" y="105">VPN exit server</text>
                <text class="small" x="640" y="130">public IP shown</text>

                <rect class="box" x="620" y="200" width="320" height="80" rx="16"/>
                <text x="640" y="245">Peers / tracker</text>
                <text class="small" x="640" y="270">see exit IP</text>

